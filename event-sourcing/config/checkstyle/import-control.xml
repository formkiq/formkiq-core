<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.1//EN"
    "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">

<import-control pkg="com.formkiq.module.eventsourcing">
	
	<subpackage name="adapters">
		<allow pkg="java.util" />
		<allow pkg="com.formkiq.module.eventsourcing.commands" />
	</subpackage>

	<subpackage name="commands">
		<allow pkg="java.time" />
		<allow pkg="java.util" />
		<allow pkg="com.formkiq.module.eventsourcing.stores" />
		<allow pkg="com.formkiq.validation" />
	</subpackage>

	<subpackage name="projector">
		<allow pkg="com.formkiq.module.eventsourcing.stores" />
	</subpackage>

	<subpackage name="stores">
		<allow pkg="java.time" />
		<allow pkg="java.util" />
	</subpackage>

	<subpackage name="transformer">
		<allow pkg="java.util" />
		<allow pkg="com.formkiq.module.eventsourcing.stores" />
		<allow pkg="com.formkiq.module.eventsourcing.commands" />
	</subpackage>

</import-control>
